{
  "manifest_version": 3,
  "name": "Prompt Builder",
  "version": "2025.07.18",
  "description": "Build better AI prompts by following a step-by-step guide.",
  "icons": {
    "32": "main/icon32.png",
    "48": "main/icon48.png"
  },
  "action": {
    "default_icon": {
      "32": "main/icon32.png",
      "48": "main/icon48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },

  "side_panel": {
    "default_path": "main/index.html"
  },
  "options": "options/index.html",
  "permissions": ["sidePanel"],
  "optional_permissions": ["scripting", "storage"],
  "optional_host_permissions": [
    "*://*.chatgpt.com/*",
    "*://copilot.microsoft.com/*",
    "*://*.claude.ai/*",
    "*://*.grok.com/*",
    "*://*.perplexity.ai/*",
    "*://gemini.google.com/*",
    "*://chat.deepseek.com/*",
    "*://chat.qwen.ai/*",
    "*://chat.mistral.ai/*",
    "*://*.meta.ai/*",
    "*://coral.cohere.com/*"
  ]
}
